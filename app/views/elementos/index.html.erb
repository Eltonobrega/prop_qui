<p id="notice"><%= notice %></p>

<h1>Elementos</h1>

<table>
  <thead>
    <tr>
      <th>Componente Químico</th>
      <th>Estado Físico (25°C)</th>
      <th>Massa Molar (g/mol)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @elementos.each do |elemento| %>
      <tr>
        <td><%= elemento.componente %></td>
        <td><%= elemento.estado %></td>
        <td><%= elemento.massa %></td>
        <td><%= link_to 'Show', elemento %></td>
        <td><%= link_to 'Edit', edit_elemento_path(elemento) %></td>
        <td><%= link_to 'Destroy', elemento, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Cadastrar Novo Elemento', new_elemento_path %>
